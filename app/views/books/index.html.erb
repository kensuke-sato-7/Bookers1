<!DOCTYPE html>
<html>
<head>
<title>Books</title>
</head>
<body>
  <h1>Books</h1>
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th> 
     </tr>
  <% @books.each do  |book| %>
  <tr>
  	<td>
  <%= book.title %>
  	</td>
  	<td>
  <%= book.body %>
  	</td>
  	<td>
  	<%=link_to "Show", book_path(book) %>
    </td>
    <td>
    <%=link_to "Edit", edit_book_path(book) %>
    </td>
    <td>
    <%=link_to "destory", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %>
    </td>
  </tr>
<% end %>
  </table>
</body>
</html>

<h1>New book</h1>
<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book) do |f| %>

   <h4>Title</h4>
   <%= f.text_field :title %>

   <h4>Body</h4>
   <%= f.text_area :body %>

   <%= f.submit 'Create Book' %>

<% end %>